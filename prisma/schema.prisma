model Testimonial {
  id             String @id @default(uuid())
  businessUnitId String

  guestName  String
  guestTitle String? // "Honeymooner", "Business Traveler"
  guestImage String?

  content String
  rating  Int?   @db.SmallInt // 1-5 stars

